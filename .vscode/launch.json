{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug hello_rust",
            "cargo": {
                "args": [
                    "build",
                    "--bin=hello_rust",
                    "--package=hello_rust",
                    "--manifest-path=${workspaceFolder}/hello_rust/Cargo.toml"
                ],
                "filter": {
                    "name": "hello_rust",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}/hello_rust"
        }
    ]
}
